#ifdef DEBUG // ==================== [ 调试宏 ] ==================== //
// debug
#define ATNSLog                  NSLog
#define ATLogFunc                NSLog(@"💬func:%s",__func__)
// result
#define ATLogResult(result)      NSLog(@"%@💬func:%s",result?@"🔵Success":@"🔴Fail",__func__)
#define ATLogSuccessTips(tips)   NSLog(@"🔵%@",tips)
#define ATLogFailTips(tips)      NSLog(@"🔴%@",tips)
#define ATLogError(error)        NSLog(@"🔴func:%s,%@", __func__,error.localizedDescription)
// obj
#define ATLogString(description) NSLog(@"💬%@",description)
#define ATLogDetail(desc1,desc2) NSLog(@"💬%@:%@",desc1,desc2)
#define ATLogObj(description,obj)NSLog(@"💬%@:💬%@",description,obj)
// assign
#define ATLogInteger(integer)    NSLog(@"💬%s:💬%d",__func__,integer)
#define ATLogUinteger(uinteger)  NSLog(@"💬%s:💬%ld",__func__,uinteger)
#define ATLogFloat(float)        NSLog(@"💬%s:💬%f",__func__,float)
#define ATLogPoint(point)        NSLog(@"💬%s:💬%@",__func__,NSStringFromCGPoint(point))
#define ATLogSize(size)          NSLog(@"💬%s:💬%@",__func__,NSStringFromCGSize(size))
#define ATLogRect(rect)          NSLog(@"💬%s:💬%@",__func__,NSStringFromCGRect(rect))
